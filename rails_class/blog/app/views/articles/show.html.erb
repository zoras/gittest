<div id="post_content">
	<h1 class="title">
	  <%= @article.title %>
	</h1>

	<p class="date">
	  Submitted <%= time_ago_in_words(@article.created_at) %> Ago
	</p>

	<p class="body">
	  <%= @article.text %>
	</p>

	<div id="comments">
		<h2><%= @article.comments.count %> Comments</h2>
		<%= render @article.comments %>

		<h3>Add a comment:</h3>
		<%= render 'comments/form' %>
	</div>

	<%= link_to 'Edit', edit_article_path(@article) %> |
	<%= link_to 'Back', articles_path %>
</div>